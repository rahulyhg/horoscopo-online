<p id="notice"><%= notice %></p>

<h1>Daily Horoscopes</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Sign</th>
      <th>Day of the week</th>
      <th>Text</th>
      <th>Color</th>
      <th>Numbers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_horoscopes.each do |daily_horoscope| %>
      <tr>
        <td><%= daily_horoscope.date %></td>
        <td><%= daily_horoscope.sign_id %></td>
        <td><%= daily_horoscope.day_of_the_week %></td>
        <td><%= daily_horoscope.text %></td>
        <td><%= daily_horoscope.color %></td>
        <td><%= daily_horoscope.numbers %></td>
        <td><%= link_to 'Show', daily_horoscope %></td>
        <td><%= link_to 'Edit', edit_daily_horoscope_path(daily_horoscope) %></td>
        <td><%= link_to 'Destroy', daily_horoscope, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Daily Horoscope', new_daily_horoscope_path %>
